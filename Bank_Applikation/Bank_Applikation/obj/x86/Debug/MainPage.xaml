<Page
    x:Class="Bank_Applikation.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bank_Applikation"
    xmlns:viewmodels="using:Bank_Applikation.ViewModels">

    <Grid>
        <!-- Lägg till ett textfält för namn -->
        <TextBox x:ConnectionId='2' x:Name="NameTextBox" PlaceholderText="Enter Name" Margin="10"/>

        <!-- Lägg till ett textfält för personnummer -->
        <TextBox x:ConnectionId='3' x:Name="PersonalNumberTextBox" PlaceholderText="Enter Personal Number" Margin="10"/>

        <!-- Lägg till en knapp för att lägga till en ny kund -->
        <!-- Lägg till en knapp för att lägga till en ny kund -->
        <Button x:ConnectionId='4' Content="Add Customer"                           Margin="10"/>

        <!-- Lägg till ListView för att visa kunder -->
        <ListView ItemsSource="{Binding Customers}" Margin="10"/>
    </Grid>
</Page>

